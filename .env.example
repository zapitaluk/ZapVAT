# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000

# HMRC API Configuration
HMRC_BASE_URL_SANDBOX=https://test-api.service.hmrc.gov.uk
HMRC_BASE_URL_PRODUCTION=https://api.service.hmrc.gov.uk
HMRC_CLIENT_ID=your_client_id_here
HMRC_CLIENT_SECRET=your_client_secret_here

# OAuth Configuration
HMRC_REDIRECT_URI=http://localhost:3000/api/auth/callback
HMRC_SCOPE=read:vat write:vat

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=24h

# Application Configuration
APP_NAME=ZapVAT
APP_VERSION=1.0.0